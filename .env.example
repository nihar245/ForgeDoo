#############################################
# Core Server
#############################################
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
CORS_ORIGIN=http://localhost:5173

#############################################
# Database (either individual vars or DATABASE_URL)
#############################################
PGHOST=localhost
PGUSER=postgres
PGPASSWORD=changeme
PGDATABASE=globetrotter
PGPORT=5432
# DATABASE_URL=postgres://postgres:changeme@localhost:5432/globetrotter

#############################################
# Redis
#############################################
REDIS_HOST=localhost
REDIS_PORT=6379

#############################################
# JWT / Auth
#############################################
JWT_SECRET=replace_this_secret
ACCESS_TOKEN_TTL_MIN=15
REFRESH_TOKEN_TTL_DAYS=7

#############################################
# Rate Limiting
#############################################
